{
    "name": "dn_elevationprofile",
    "version": "2.0.0-SNAPSHOT",
    "title": "${bundleName}",
    "description": "${bundleDescription}",
    "vendor": "con terra GmbH",
    "productName": "devnet-mapapps-elevation-profile",
    "configBundleLocation": "/config",
    "dependencies": {
        "esri": "^4.12.0",
        "esri-widgets": "^4.8.0",
        "map-widget": "^4.8.0",
        "apprt-binding": "^4.8.0"
    },
    "CSS-Themes-Extension": [
        {
            "name": "*",
            "files": [
                "./css/styles.css"
            ]
        }
    ],
    "layout-widgets": [
        {
            "widgetRole": "elevationProfileWidget",
            "window": {
                "title": "${windowTitle}",
                "dockTool": "elevationProfileToggleTool",
                "closable": true,
                "minimizeOnClose": true,
                "resizable": false,
                "dockable": true,
                "draggable": false,
                "marginBox": {
                    "l": 0,
                    "h": 270,
                    "r": 0,
                    "b": 33
                },
                "fixEdgesInViewPort": {
                    "t": false
                },
                "windowClass": "noTitleBar noPadding"
            }
        }
    ],
    "components": [
        {
            "name": "Config",
            "impl": "./ElevationProfileWidgetController",
            "provides": [
                "dn_elevationprofile.ElevationProfileWidgetController"
            ],
            "properties": {
                "geodesicDistanceThreshold": 100000,
                "profiles": [
                    {
                        "type": "ground"
                    }
                ],
                "unit": "meters",
                "unitOptions": [
                    "meters",
                    "kilometers",
                    "feet"
                ],
                "visibleElements": {
                    "statistics": true,
                    "legend": true,
                    "sketchButton": true,
                    "selectButton": true
                }
            },
            "references": [
                {
                    "name": "_mapWidgetModel",
                    "providing": "map-widget.MapWidgetModel"
                }
            ]
        },
        {
            "name": "ElevationProfileToggleTool",
            "impl": "ct/tools/Tool",
            "provides": [
                "ct.tools.Tool"
            ],
            "propertiesConstructor": true,
            "properties": {
                "id": "elevationProfileToggleTool",
                "title": "${tool.title}",
                "tooltip": "${tool.tooltip}",
                "iconClass": "icon-chart-line",
                "activateHandler": "onToolActivated",
                "deactivateHandler": "onToolDeactivated",
                "toolRole": "toolset",
                "togglable": true,
                "noGroup": true
            },
            "references": [
                {
                    "name": "handlerScope",
                    "providing": "dn_elevationprofile.ElevationProfileWidgetController"
                }
            ]
        }
    ]
}
