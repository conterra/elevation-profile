{
    "properties": {
        "title": "${apptitle}"
    },
    "load": {
        "bundleLocations": [
            "localbundles",
            "bundles"
        ],
        "allowedBundles": [
            "system",
            "console",
            "notifier",
            "splashscreen",
            "templatelayout",
            "template-seasons",
            "theme-everlasting",
            "theme-winter",
            "theme-spring",
            "theme-summer",
            "theme-autumn",
            "map-init",
            "map-preload-2D",
            "map-preload-3D",
            "toolset",
            "banner",
            "basemaptoggler",
            "mapnavigation",
            "scalebar",
            "omnisearch",
            "locator-store",
            "wizard",
            "toc",
            "dn_elevationprofile"
        ],
        "require": [
            "${app}.app"
        ],
        "i18n": [
            "bundle"
        ]
    },
    "bundles": {
        "dn_elevationprofile": {
            "Config": {
                "label": "Peter",
                "geodesicDistanceThreshold": 100000,
                "profiles": [
                    {
                        "type": "ground"
                    },
                    {
                        "type": "view"
                    }
                ],
                "unit": "meters",
                "unitOptions": [
                    "meters",
                    "kilometers",
                    "feet"
                ],
                "visibleElements": {
                    "statistics": true,
                    "legend": true,
                    "sketchButton": true,
                    "selectButton": true
                }
            }
        },
        "banner": {
            "BannerWidget": {
                "label": "Developer Network",
                "image": "resource('${app}:/images/logo_conterra.png')",
                "imageWidth": 200,
                "imagePosition": "above",
                "link": "http://developernetwork.conterra.de"
            }
        },
        "basemaptoggler": {
            "Config": {
                "itemStyles": {
                    "esri_street": "icon-thumbnail",
                    "esri_hybrid": "icon-thumbnail",
                    "esri_topo": "icon-thumbnail"
                }
            }
        },
        "map-init": {
            "Config": {
                "basemaps": [
                    {
                        "id": "esri_street",
                        "title": "Stra√üenkarte (grau)",
                        "thumbnailUrl": "resource('${app}:/images/streets.png')",
                        "basemap": "gray"
                    },
                    {
                        "id": "esri_hybrid",
                        "title": "Luftbild (hybrid)",
                        "thumbnailUrl": "resource('${app}:/images/hybrid.png')",
                        "basemap": "hybrid"
                    },
                    {
                        "id": "esri_topo",
                        "title": "Topographische Karte",
                        "thumbnailUrl": "resource('${app}:/images/topo.png')",
                        "selected": true,
                        "basemap": "topo"
                    }
                ],
                "map": {
                    "layers": [
                        {
                            "id": "zuerich",
                            "url": "https://tiles.arcgis.com/tiles/oPre3pOfRfefL8y0/arcgis/rest/services/LOD2_GEBAEUDE_ZRH/SceneServer",
                            "type": "AGS_SCENE",
                            "renderer": {
                                "type": "simple",
                                "symbol": {
                                    "type": "mesh-3d",
                                    "symbolLayers": [
                                        {
                                            "type": "fill",
                                            "material": {
                                                "color": "#ffffff",
                                                "colorMixMode": "replace"
                                            },
                                            "edges": {
                                                "type": "solid",
                                                "color": [
                                                    50,
                                                    50,
                                                    50,
                                                    0.5
                                                ],
                                                "size": 1
                                            }
                                        }
                                    ]
                                }
                            }
                        }
                    ],
                    "ground": "world-elevation"
                },
                "view": {
                    "viewmode": "3D",
                    "camera": {
                        "heading": 338.4613139877434,
                        "tilt": 65.6626297158947,
                        "position": {
                            "x": 951163.1908125386,
                            "y": 6002664.875400205,
                            "z": 793.7736872918904,
                            "spatialReference": {
                                "wkid": 102100
                            }
                        }
                    }
                }
            }
        },
        "themes": {
            "ThemeModel": {
                "_selectedTheme": "autumn"
            },
            "ThemeSelector": {
                "componentEnabled": true
            }
        },
        "templates": {
            "TemplateModel": {
                "_templates": [
                    {
                        "name": "seasons",
                        "widgets": [
                            {
                                "widgetRole": "drawer_button",
                                "attachTo": "map_topleft",
                                "props": {
                                    "layoutIndex": 0
                                }
                            },
                            {
                                "widgetRole": "banner",
                                "sublayout": [
                                    "mobile_portrait"
                                ],
                                "attachTo": "footer_right"
                            }
                        ]
                    }
                ]
            }
        },
        "toc": {
            "Config": {
                "showBasemaps": true
            }
        },
        "toolrules": {
            "ToolActiveStateManager": {
                "activateOnStartToolIds": [
                    "elevationProfileToggleTool"
                ]
            }
        },
        "toolset": {
            "ToolsetManager": {
                "toolsets": [
                    {
                        "id": "mapview_tools",
                        "tools": [
                            "locateMeTool",
                            "zoomInTool",
                            "zoomOutTool",
                            "compassTool",
                            "restoreInitialViewTool",
                            "viewmodeSwitcherTool",
                            "elevationProfileToggleTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "mapview_tools"
                        },
                        "container": "ignore",
                        "windowType": "container",
                        "cssClass": "muted"
                    },
                    {
                        "id": "drawer_left",
                        "title": "Werkzeuge",
                        "cssClass": "ct-main-app-menu",
                        "tools": [
                            "elevationProfileToggleTool"
                        ],
                        "registerWidget": {
                            "widgetRole": "drawer_button"
                        },
                        "container": "ignore",
                        "windowType": "drawer_left"
                    }
                ]
            }
        }
    }
}